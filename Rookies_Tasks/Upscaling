#include <iostream>
using namespace std;
 
void print(int n) {
    int size = 2 * n;
    for (int i = 0; i < size; i++) {
        for (int j = 0; j < size; j++) {
            // Determine the character to print based on the position
            if ((i / 2 + j / 2) % 2 == 0)
                cout << "#";
            else
                cout << ".";
        }
        cout << endl;
    }
}
 
int main() {
    int t;
    cin >> t;
    while (t--) {
        int n;
        cin >> n;
        print(n);
    }
    return 0;
}
